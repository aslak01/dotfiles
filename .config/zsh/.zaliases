# General
alias vim='nvim'
# alias g='update_lazygit_theme && lazygit'
alias g='lazygit'
alias v='vim .'
alias cat='bat --style=plain'
alias lsnew='eza --sort=modified --reverse | tail'
alias df='df -h'
alias du='du -h'

# Navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias cd..='cd ..'

# Applications
alias nocorschrome='open -a Google Chrome --args --disable-web-security --user-data-dir="/tmp/"'
alias nrs='open -a Numbers'
alias icat="kitten icat"
alias obs="cd $HOME/Library/Mobile\ Documents/iCloud~md~obsidian/Documents"

# ghostty support
alias pass="TERM=xterm-256color pass"
alias mutt='TERM=xterm-256color neomutt'

# Tools
alias ls='eza -a --icons --group-directories-first --color=auto'
alias ll='eza -la --icons --group-directories-first --color=auto'
alias lnew='eza -la --icons --group-directories-first --color=auto -snew | tail'

alias nvimrc="vim $HOME/.config/nvim/"
alias zshrc="vim $ZDOTDIR/.zshrc"
alias s="source $ZDOTDIR/.zshrc"

alias skgl="$HOME/w/tnr/skogul/skogul"
