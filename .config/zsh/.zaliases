# .zaliases

# General
alias vim='nvim'
alias lg='lazygit'
alias v='vim .'
alias cat='bat --style=plain'
alias df='df -h'

# Navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias cd..='cd ..'

# Applications
alias nocorschrome='open -a Google Chrome --args --disable-web-security --user-data-dir="/tmp/"'
alias nrs='open -a Numbers'
alias icat="kitten icat"
alias obs="cd $HOME/Library/Mobile\ Documents/iCloud~md~obsidian/Documents"

# ghostty support
alias pass="TERM=xterm-256color pass"
alias mutt='TERM=xterm-256color neomutt'

# Tools
alias ls='eza -a --icons'
alias ll='eza -l --icons --color auto'
alias lsnew='eza -l -snew | tail'
alias tldrf='tldr --list | fzf --preview "tldr {1}" --preview-window=right,70% | xargs tldr'
alias sd="cd \$(fd . -t d | fzf)"

# Configuration
alias zshrc="vim $HOME/.zshrc"
alias nvimrc="vim $HOME/.config/nvim/"
