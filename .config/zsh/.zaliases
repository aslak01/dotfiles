# General
alias vim='nvim'
# alias g='update_lazygit_theme && lazygit'
alias g='lazygit'
alias v='nvim .'

alias kvim='NVIM_APPNAME="kickstart.nvim" nvim'
alias kv='NVIM_APPNAME="kickstart.nvim" nvim .'

alias cat='bat --style=plain'
alias lsnew='eza --sort=modified --reverse | tail'
alias df='df -h'
alias du='du -h'

# Navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias cd..='cd ..'

# Applications
alias nocorschrome='open -a Google Chrome --args --disable-web-security --user-data-dir="/tmp/"'
alias nrs='open -a Numbers'
alias icat="kitten icat"
alias obs="cd $HOME/Library/Mobile\ Documents/iCloud~md~obsidian/Documents/obsidian-vault && v"

# ghostty support
# alias pass="TERM=xterm-256color pass"
# alias mutt='TERM=xterm-256color neomutt'

# Tools
alias ls='eza -A --icons --group-directories-first --color=auto'
alias ll='eza -lA --icons --group-directories-first --color=auto'
alias lnew='eza -lA --icons --group-directories-first --color=auto -snew | tail'

# fix gnu sed vs bsd sed file extension issue in pass
pass() {
  /opt/homebrew/bin/pass "$@" | sed 's/\.gpg\([^/]*\)$/\1/'
}
alias p="pass -c"

# convenience
alias nvimrc="vim $HOME/.config/nvim/"
alias zshrc="vim $ZDOTDIR/.zshrc"
alias s="source $ZDOTDIR/.zshrc"
alias tra="ssh tra"

alias skgl="$HOME/w/tnr/skogul/skogul"

alias binsign="xattr -d com.apple.quarantine"
alias ql="qlmanage -p"
alias c="cd $HOME/w/pers/claud && claude"

# copy terminfo on ssh connect
# "i'm helping"
[ "$TERM" = "xterm-kitty" ] && alias ssh="kitty +kitten ssh"
